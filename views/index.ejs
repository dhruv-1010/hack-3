<%- include('./nav') %>

<div id="quotesBox">
    <% for (let item of quotesD) { %>
        <div class="box">
            <div>
                <h1>" <%= item.quote %> "</h1>
                <p>- <%= item.name %></p>
            </div>
        <a href="/show/<%=item._id%>">
        <button class="btn">
                Show Quote
            </button>
        </a>
        <form action="/show/<%=item._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn" style="background-color: rgb(221, 73, 73);">Delete Quote</button>
        </form>
        </div>
   <% } %>
</div>

</body>
</html>